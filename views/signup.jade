extends layout

block content
	.container.content
		#row3.row
			#signup-wrapper.fullElement
				h1 Create a StudyFinder Profile
				ul(style='list-style:none')
					if errors
						each e in errors
							div.alert.alert-success.alert-dissamble(role='alert')
								a.close(href='#',data-dismiss='alert') &times;
								a.alert-link(href='#')=e.msg
				.reg-content
					form(multipart='urlencoded', name='sign-up-form', onsubmit='return validateSignUp()', action="/signup" , method='POST')
						input(type='text', name='firstname', placeholder='First Name', required='')
						br
						input(type='text', name='lastname', placeholder='Last Name', required='')
						br
						input(type='text', name='age', placeholder='Age', required='')
						br
						input(type='email', name='username', placeholder='Email', required='')
						br
						input(type='password', name='password', placeholder='Password', required='')
						br
						each val , index in ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']
							.row.no-gutter
								.col-md-3
									h3= val
								.col-md-9
									.col-md-6
										select(name='avail[' + index + '][start]')
											each time in ['00:00','01:00','02:00','03:00','04:00','05:00','06:00','07:00','08:00','09:00','10:00','11:00','12:00','13:00','14:00','15:00','16:00','17:00','18:00','19:00','20:00','21:00','22:00','23:00','24:00']
												option(value=time)= time
									.col-md-6
										select(name='avail[' + index + '][end]')
											each time in ['00:00','01:00','02:00','03:00','04:00','05:00','06:00','07:00','08:00','09:00','10:00','11:00','12:00','13:00','14:00','15:00','16:00','17:00','18:00','19:00','20:00','21:00','22:00','23:00','24:00']
												option(value=time)= time
						input.button(type='submit', value='Submit')
					br
